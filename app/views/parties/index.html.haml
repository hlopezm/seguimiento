%h1 Listado Partidos

%table.table.table-hover
  %thead
    %tr
      %th Nombre
      %th Imagen


  %tbody
    - @parties.each do |party|
      %tr
        %td= link_to party.nombre, party
        %td= image_tag party.image.thumb

        %td
          = link_to 'Edit', edit_party_path(party)
          = link_to 'Destroy', party, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Party', new_party_path, class: "btn btn-primary"
